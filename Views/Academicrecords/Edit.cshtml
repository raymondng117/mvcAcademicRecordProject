@model LabAssignment6.DataAccess.Academicrecord

@{
    ViewData["Title"] = "Edit";
}



<h1>Edit</h1>

<h4>Academicrecord</h4>
<hr />
<div class="row">
    <div class="col-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseCode" value="@Model.CourseCode" />
            <input type="hidden" asp-for="StudentId" value="@Model.StudentId" />
            <div class="form-group">
                <div class="my-2">
                    <label class="form-label">Name: </label>
                    <span class="ms-2 fw-bold">@Model.Student.Name;</span>
                </div>
                <div class="my-2">
                    <label class="form-label">Course: </label>
                    <span class="ms-2 fw-bold">@Model.CourseCodeNavigation.Title</span>
                </div>

                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
