@model List<LabAssignment6.DataAccess.Academicrecord>

@{
    ViewData["Title"] = "View";
}

<h1>Edit All</h1>

<h4>Academicrecord</h4>
<hr />
<div class="row">
    <div class="col-10">
        <form asp-action="EditAll">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.ActionLink("Course", "EditAll", new { orderby="course"})
                        </th>
                        <th scope="col">
                            @Html.ActionLink("Student", "EditAll", new { orderby="student"})
                        </th>
                        <th scope="col">
                            @Html.ActionLink("Grade", "EditAll", new { orderby="grade"})
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model[i].CourseCodeNavigation.Code - @Model[i].CourseCodeNavigation.Title
                                <input type="hidden" asp-for="@Model[i].CourseCode" />
                            </td>
                            <td>
                                @Model[i].Student.Id - @Model[i].Student.Name
                                <input type="hidden" asp-for="@Model[i].StudentId" />
                            </td>
                            <td>
                                <input asp-for="@Model[i].Grade" value="@Model[i].Grade" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
